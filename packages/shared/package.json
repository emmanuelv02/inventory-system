{
  "name": "@repo/shared",
  "type": "commonjs",
  "files": [
    "./dist"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build": "nest build",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}